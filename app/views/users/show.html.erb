<h1>User Profile</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>  
<p>
  <strong>Name Order:</strong>
  <%= @user.name_order %>
</p>

<% if @user.name_order == "western" %>
  <p>
    <strong>Given Name:</strong>
    <%= @user.given_name %>
  </p>
  <p>
    <strong>Family Name:</strong>
    <%= @user.family_name %>
  </p>
<% else %>
  <p>
    <strong>Family Name:</strong>
    <%= @user.family_name %>
  </p>
  <p>
    <strong>Given Name:</strong>
    <%= @user.given_name %>
  </p>
<% end %>